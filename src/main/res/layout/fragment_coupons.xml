<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bak"
    android:orientation="vertical"
    tools:context="com.metro.metromall.fragments.vip_center.CouponsFragment"
    android:clickable="true">

    <include layout="@layout/fragment_title_gp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/Fifty"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/can_use"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/can_use_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/can_use"
                android:textColor="#013894"
                android:textSize="@dimen/sixteen" />

            <View
                android:id="@+id/can_use_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Three"
                android:background="#013894" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/used"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/used_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/used"
                android:textColor="@color/vip_recommend"
                android:textSize="@dimen/sixteen" />

            <View
                android:id="@+id/used_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Three"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
    <include layout="@layout/fragment_null_info"/>
</LinearLayout>
