<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bak"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.metro.metromall.fragments.main.MyFragment">

    <include layout="@layout/fragment_title_gp" />

    <com.metro.metromall.tools.SuperSwipeRefreshLayout
        android:id="@+id/my_super_srl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Hundred"
                    android:background="@mipmap/menber_bg">

                    <com.metro.metromall.tools.RoundImageView
                        android:id="@+id/ic_heads"
                        android:layout_width="@dimen/Sixty"
                        android:layout_height="@dimen/Sixty"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:src="@mipmap/user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:layout_toRightOf="@+id/ic_heads"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vip_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号：13162637517"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen" />

                        <TextView
                            android:id="@+id/vip_lvl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/Ten"
                            android:text="普通会员"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twelve" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Sixty"
                    android:background="@color/scroll_home_title">

                    <LinearLayout
                        android:id="@+id/wait_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_home_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wait_payment"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/Ten"
                        android:layout_marginTop="@dimen/Ten"
                        android:background="@color/white" />

                    <LinearLayout
                        android:id="@+id/wait_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_home_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wait_delivery"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/Ten"
                        android:layout_marginTop="@dimen/Ten"
                        android:background="@color/white" />

                    <LinearLayout
                        android:id="@+id/my_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_home_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_orders"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/coupons"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/FortyFive"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:src="@mipmap/sale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:text="@string/coupons"
                        android:textColor="@color/home_notice"
                        android:textSize="@dimen/fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_collect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/FortyFive"
                    android:layout_marginTop="@dimen/One"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:src="@mipmap/my_collect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:text="@string/my_collect"
                        android:textColor="@color/home_notice"
                        android:textSize="@dimen/fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_footprint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/FortyFive"
                    android:layout_marginTop="@dimen/One"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:src="@mipmap/footprint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:text="@string/my_footprint"
                        android:textColor="@color/home_notice"
                        android:textSize="@dimen/fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/FortyFive"
                    android:layout_marginTop="@dimen/One"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:src="@mipmap/policy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:text="@string/service_center"
                        android:textColor="@color/home_notice"
                        android:textSize="@dimen/fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/FortyFive"
                    android:layout_marginTop="@dimen/One"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:src="@mipmap/feedback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:text="@string/feedback"
                        android:textColor="@color/home_notice"
                        android:textSize="@dimen/fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/policy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/FortyFive"
                    android:layout_marginTop="@dimen/One"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:src="@mipmap/policy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Twenty"
                        android:text="@string/policy"
                        android:textColor="@color/home_notice"
                        android:textSize="@dimen/fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Thirty"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="1"
                        android:background="@color/vip_recommend" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Ten"
                        android:layout_marginRight="@dimen/Ten"
                        android:text="@string/vip_recommend"
                        android:textColor="@color/vip_recommend"
                        android:textSize="@dimen/sixteen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_weight="1"
                        android:background="@color/vip_recommend" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.metro.metromall.tools.SuperSwipeRefreshLayout>
</LinearLayout>
