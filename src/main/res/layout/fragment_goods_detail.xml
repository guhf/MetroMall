<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bak"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.metro.metromall.fragments.GoodsDetailFragment">

    <include layout="@layout/fragment_title_gp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <android.support.v4.view.ViewPager
                android:id="@+id/goods_detail_image"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="@color/red"></android.support.v4.view.ViewPager>
            
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
